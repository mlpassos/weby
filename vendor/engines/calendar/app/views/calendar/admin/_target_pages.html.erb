<div class="search_bar">
  <%= form_tag admin_events_path(template: 'list_popup'), method: 'get', autocapitalize: "off", class: 'search', remote: true do %>
    <div class="row">
      <div class="col-md-7">
        <%= search_input params[:search], placeholder: t('.search_pages'), button_class: 'btn-search-page' %>
      </div>
    </div>
    <%= hidden_field_tag 'page', 1 %>
    <%= hidden_field_tag 'per_page', "#{params[:per_page]}" %>
  <% end %>
  <div class="clearfix"></div>
</div>
<% if @events %>
  <% if @events.empty? %>
    <div class="alert alert-warning">
      <%= t(".none_events") %>
    </div>
  <% else %>
    <div class="page-results">
      <table class="list table table-striped">
        <thead>
          <th><%= sortable 'date_begin_at', t(".register_date")%></th>
          <th><%= t(".name") %></th>
          <th><%= sortable 'kind', t(".kind") %></th>
          <th><%= sortable 'user', t(".author") %></th>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr data-id="<%= event.id%>" data-url="<%= event_path(event) %>" data-title="<%= event.name %>" data-type="<%= "Calendar::Event" %>" class="cursor highlight target-item">
              <td><%= event.created_at.strftime('%d/%m/%y') %></td>
              <td><%= event.name %></td>
              <td><%= event.kind %></td>
              <td><%= event.user.fullname %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="pull-right"> <%= paginate @events, remote: true, size: :sm %> </div>
      <div class="pull-left"> <%= per_page_links @events, true, :sm %> </div>
      <div class="clearfix"></div>
    </div>
  <% end %>
<% end %>
