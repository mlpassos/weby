<%= each_i18n_tab available_locales(@event) do |locale| %>
  <%= f.i18ns_fields_for(locale) do |g| %>
    <%= g.input :_destroy, as: :boolean if g.object.try(:id) %>
    <%= g.input :name %>
    <%= g.input :information,
      input_html: {class: "mceSimple", style: "height: 180px;"},
      as: :text %>
  <% end %>
<% end %>
<%= target_dialog %>
